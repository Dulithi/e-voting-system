# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/evoting_db

# JWT Configuration
JWT_SECRET_KEY=change_this_to_very_long_random_secret_key_at_least_64_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Service URLs (Local Development - not used with direct API calls)
AUTH_SERVICE_URL=http://localhost:8001
TOKEN_SERVICE_URL=http://localhost:8002
VOTE_SERVICE_URL=http://localhost:8003
BULLETIN_BOARD_SERVICE_URL=http://localhost:8004
ELECTION_SERVICE_URL=http://localhost:8005
CODE_SHEET_SERVICE_URL=http://localhost:8006

# WebAuthn Configuration
WEBAUTHN_RP_NAME=SecureVote E-Voting System
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:5173

# CORS Configuration (Allow admin web to connect)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (for code sheets)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@securevote.com

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads
